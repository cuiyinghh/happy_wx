page,
.index {
  position: relative;
  width: 100%;
  height: 100%;
  background: #aee9e0;
}

.zj-img {
  position: absolute;
  top: -34rpx;
  left: 250rpx;
  width: 240rpx;
  height: 180rpx;
}

.index {
  padding-top: 140rpx; 
  box-sizing: border-box;
  font-size: 26rpx;
}

.phone-wrap {
  position: relative;
  width: 700rpx;
  height: 1000rpx;
  margin: 0 auto;

  background-color: #fff;
  border-radius: 20px;
  box-shadow: 0 0 30rpx 0 rgba(34,195,170,0.5);
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  overflow: hidden;
}

.title {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  box-shadow: 0 0 60rpx 0 rgba(34,195,170,0.15);
  background: #fff;
  z-index: 2;  
  color: #888;
}

.chat-main {
  position: absolute;
  top: 80rpx;
  bottom: 100rpx;
  width: 100%;
  background: #E8F9F6;
  z-index: 1;
  color: #444;
}

::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-thumb {
  background-color: #bdf4eb;
  -webkit-border-radius: 4rpx;
  border-radius: 4rpx;
}

.foot-butt {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #f3f3f3;
  box-shadow: 0 0 60rpx 0 rgba(34,195,170,0.2);
  z-index: 2;
}

.foot-butt::after {
  content: '';
  display: block;
  box-shadow: 0 0 80rpx 12rpx rgba(0,0,0,0.1);
}

.foot-butt-txt {
  color: #aaa;
  padding-left: 40rpx;
}

.chat-item-wrap {
  width: 100%;
  overflow: hidden;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}

.chat-item-wrap:last-child {
   margin-bottom: 20rpx; 
}

.chat-item-wrap:first-child {
   margin-top: 20rpx; 
}

.chat-item {
  display: inline-block;
  max-width: 480rpx; 
  padding: 20rpx 30rpx;
  line-height: 150%;
  box-shadow: 0 5px 15px 0 rgba(102,102,102,0.08);
}

.item-left {
  background: #fff;
  border-radius: 0 40rpx 40rpx 40rpx;
}

.item-right {
  float: right;
  background: #43d5d4;
  color: #fff;
  border-radius: 40rpx 0 40rpx 40rpx;
}

#loading {
  width: 80rpx;
  height: 36rpx;
  line-height: 36rpx;
}

.do {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin-left: 14rpx;
  background: #b0e9e0;
  border-radius: 100%;
}

.move1 {
  animation: act 1.2s linear infinite both;
  animation-delay: .8s;
  
}
.move2 {
  animation: act 1.2s linear infinite both;
  animation-delay: .4s;
}
.move3 {
  animation: act 1.2s linear infinite both;
}
@keyframes act {
	0%  {
    opacity: 0.2;
	}
	50% {
    opacity: 1;
	}
  100% {
    opacity: 0.2;
	}
}

.re-list-wrap {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 100;
}

.re-list {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #fff;
} 

.re-line {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f3f3f3;
}

.re-top-txt {
  color: #aaa;
}

.close {
  float: right; 
  width: 90rpx;
  height: 100rpx;
  text-align: right;
  color: #aaa;
}

.re-item {
  color: #666;
}

.move-appear {
  animation: appear .2s linear both;
}

@keyframes appear {
	0%  {
    opacity: 0;
	}
  100% {
    opacity: 1;
	}
}

.next-butt {
  color: pink;
}