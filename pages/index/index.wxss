page,
.index {
  width: 100%;
  height: 100%;
  background: #aee9e0;
}

.index {
  padding-top: 140rpx;
  box-sizing: border-box;
}

.phone-wrap {
  width: 700rpx;
  height: 1000rpx;
  margin: 0 auto;

  background-color: #fff;
  border-radius: 20px;
  box-shadow: 0 0 30px 0 rgba(34,195,170,0.5);
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  overflow: hidden;
}